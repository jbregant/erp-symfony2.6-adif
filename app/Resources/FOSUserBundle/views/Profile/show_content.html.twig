{% trans_default_domain 'FOSUserBundle' %}

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary" data-collapsed="0">
            <div class="panel-heading">
                <div class="panel-title">
                    Detalles del perfil <strong>{{ user.username }}</strong>
                </div>
                <div class="panel-options">
                    <a href="#" data-rel="collapse"><i class="entypo-down-open"></i></a>
                </div>
            </div>
            <div class="panel-body">
                <div class="form-group detail">
                    <label>Nombre de usuario</label>
                    <div class="dato">
                        {{ user.username }}
                    </div>
                    <div class="clear" ></div>
                    <label>Email</label>
                    <div class="dato">
                        {{ user.email }}
                    </div>
                </div>
                <div class="form-group detail">
                    <div class="col-sm-12">
                        <button type="button" class="btn btn-default btn-icon icon-left button-back">Volver<i class="entypo-left"></i></button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
