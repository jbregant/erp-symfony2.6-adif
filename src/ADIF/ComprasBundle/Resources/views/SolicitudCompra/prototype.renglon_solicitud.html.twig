

<fieldset class="form-section-fieldset renglon-solicitud-content 
          {% if edit and renglon.vars.value is not null 
            and renglon.vars.value.estadoRenglonSolicitudCompra is not null 
            and renglon.vars.value.estadoRenglonSolicitudCompra.denominacionEstadoRenglonSolicitudCompra 
                == constant(ConstanteEstadoRenglonSolicitud ~ '::ESTADO_RENGLON_SOLICITUD_DESAPROBADO') %} 
          renglon-desaprobado {% endif %} ">

    <legend class="form-section-legend">
        <span>
            Rengl&oacute;n
        </span>
        <span class="delete-link-xs">
            <a href="#" 
               class="badge badge-danger prototype-link-remove-renglon-solicitud accion-borrar tooltips" 
               data-placement="right" data-original-title="Eliminar rengl&oacute;n">X</a>
        </span>
    </legend>

    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                {{ form_label(renglon.rubro) }}
                <div class="input-icon right">
                    <i class="fa"></i>
                    {{ form_widget(renglon.rubro) }}
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                {{ form_label(renglon.bienEconomico) }}
                {% if app.user.isGranted('ROLE_COMPRAS_CREACION_BIEN_ECONOMICO') %}
                    <a href="{{ path('bieneconomico_new', {"popup": true }) }}" 
                       class="pull-right label label-sm label-info tooltips agregar_bien_economico"
                       data-original-title="Agregar nuevo bien econ&oacute;mico">
                        <i class="fa fa-plus"></i>
                    </a>
                {% endif %}
                <div class="input-icon right">
                    <i class="fa"></i>
                    {{ form_widget(renglon.bienEconomico) }}
                </div>
            </div>
        </div>
        <div class="col-md-2">
            <div class="form-group">
                {{ form_label(renglon.prioridad) }}
                <div class="input-icon right">
                    <i class="fa"></i>
                    {{ form_widget(renglon.prioridad) }}
                </div>
            </div>
        </div> 
        <div class="col-md-2">
            <div class="form-group">
                {{ form_label(renglon.cantidadSolicitada) }}
                <div class="input-icon right">
                    <i class="fa"></i>
                    {{ form_widget(renglon.cantidadSolicitada) }}
                </div>
            </div>
        </div>                
    </div>
    <div class="row">   
        <div class="col-md-12">
            <div class="form-group">
                {{ form_label(renglon.descripcion) }}
                <div class="input-icon right">
                    <i class="fa"></i>
                    {{ form_widget(renglon.descripcion) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row">      

        <div class="col-md-2">
            <div class="form-group">
                {{ form_label(renglon.unidadMedida) }}
                <div class="input-icon right">
                    <i class="fa"></i>
                    {{ form_widget(renglon.unidadMedida) }}
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                {{ form_label(renglon.justiprecioUnitario) }}
                <div class="input-icon right">
                    <i class="fa"></i>
                    {{ form_widget(renglon.justiprecioUnitario) }}
                </div>
            </div>
        </div> 
        <div class="col-md-3">
            <div class="form-group">
                {{ form_label(renglon.justiprecioTotal) }}
                <div class="input-icon right">
                    <i class="fa"></i>
                    {{ form_widget(renglon.justiprecioTotal) }}
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                {{ form_label(renglon.especificacionTecnica.archivo) }}

                {% if edit and renglon.vars.value is not null and renglon.vars.value.especificacionTecnica is not null %} 
                    <a  class="download-link" target="_blank"
                        href="{{ asset('uploads/especificacion_tecnica/' ~ renglon.vars.value.especificacionTecnica.nombreArchivoClear) }}">
                        (Descargar)
                    </a>
                    <div class="input-icon right">
                        <i class="fa"></i>
                        {{ form_widget(renglon.especificacionTecnica.archivo, {'attr' : { 'data-file' : renglon.vars.value.especificacionTecnica.nombre} }) }}
                    </div>
                {% else %} 
                    <div class="input-icon right">
                        <i class="fa"></i>
                        {{ form_widget(renglon.especificacionTecnica.archivo) }}
                    </div>
                {% endif %}                 
            </div>
        </div>
    </div>

    {{ form_widget(renglon.renglonPedidoInterno) }}

</fieldset>