{% extends '::base.html.twig' %}

{% set edit = form.vars.value.id != null %}

{% block body -%}
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">Adicional</div>
            <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>
            </div>
        </div>
        <div class="portlet-body form">
            {{ form_start(form, {'attr': {'class' : 'horizontal-form','novalidate': 'novalidate'} }) }}

            {% include ':Form:fieldsErrors.html.twig' %}

            {% if edit %} 
                <input type="hidden" name="_method" value="PUT" />
            {% endif %} 

            <div class="form-body">
                <div class="row">                        
                    <div class="col-md-3">
                        <div class="form-group">
                            {{ form_label(form.signo) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.signo) }}
                            </div>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            {{ form_label(form.tipoAdicional) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.tipoAdicional) }}
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.valor) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.valor) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            {{ form_label(form.observacion) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.observacion) }}
                            </div>
                        </div>
                    </div>
                </div>  

                <div class="row">
                </div>
            </div>
            <div class="form-actions right">
                <button type="button" class="btn default button-back" back-url="{{ path('adicionalcotizacion') }}">Cancelar</button>
                {{ form_widget(form.submit, {'attr': {'class': 'btn blue'}}) }}
            </div>
            {{ form_widget(form._token) }}
            {{ form_end(form, {"render_rest": false}) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script>
        $('form[name=adif_comprasbundle_adicionalcotizacion]').validate();
    </script>

{% endblock %}
