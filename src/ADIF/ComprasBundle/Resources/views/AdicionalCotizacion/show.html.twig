{% extends '::base_reducido.html.twig' %}

{% block body -%}
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">
                Detalles del Adicional Cotizaci&oacute;n: <strong>{{ entity }}</strong>
            </div>
            <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>                
            </div>
        </div>
        <div class="portlet-body">
            <div class="row">                
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Signo</label>
                        <div class="detalle_show">                                
                            {{ entity.signo }}                        
                        </div>
                    </div>
                </div>                
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Valor</label>
                        <div class="detalle_show">                                
                            {{ entity.valor|money_format }}                        
                        </div>
                    </div>
                </div>                    
            </div>
            <div class="row">                
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Observaci&oacute;n</label>
                        <div class="detalle_show">                                
                            {{ entity.observacion|default('-') }}                        
                        </div>
                    </div>
                </div>                    
            </div>
            <div class="form-actions">
                <button type="button" class="btn default button-back" 
                        back-url="{{ path('adicionalcotizacion') }}">
                    <i class="m-icon-swapleft"></i> Volver
                </button>
            </div>
        </div>
    </div>
{% endblock %}
