                    <div class="form-group">
                        <label class="control-label">Rubro</label>
                        <div class="detalle_show">{{ entity.rubro }}</div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label class="control-label">Tipo</label>
                        <div class="detalle_show">{{ entity.esProducto ? 'Producto' : 'Servicio' }}</div>
