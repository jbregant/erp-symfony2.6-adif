                    <div class="form-group">
                        <label class="control-label">Cuenta contable</label>
                        <div class="detalle_show">{{ entity.cuentaContable|default('-') }}</div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label class="control-label">Especificaci&oacute;n t&eacute;cnica</label>
                        <div class="detalle_show">{{ entity.requiereEspecificacionTecnica ? 'SÃ­' : 'No' }}</div>
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <button type="button" class="btn default button-back" 
                        back-url="{{ path('bieneconomico') }}">
                    <i class="m-icon-swapleft"></i> Volver
                </button>
            </div>
        </div>
    </div>
{% endblock %}
