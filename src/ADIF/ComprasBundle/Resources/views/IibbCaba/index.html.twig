 {% extends '::base.html.twig' %}  


 
{% block body -%}

<div class="row">
    <div class="col-md-12">
        <div class="portlet box blue">
            <div class="portlet-title">
                <div class="caption">Padr&oacute;n de ingresos brutos CABA - {% if esProveedor == 1 %} Proveedor {% else %} Cliente {% endif %}</div>
            </div>
            <div class="portlet-body">
                <div class="table-toolbar">
                    <div class="btn-group">
                        <a class="btn btn-sm green tooltips" data-placement="right" data-original-title="Crear iibbcaba" href=" {{ path('iibb_caba_new', {'esProveedor': esProveedor}) }} ">
                            Crear grupo <i class="fa fa-plus"></i>
                        </a>
                    </div>
                </div>
                <table 
                    class="table table-bordered table-striped table-condensed flip-content dt-multiselect export-excel" 
                    id="table-iibbcaba"
                    dataexport-title="iibbcaba">
                    <thead>
                        <tr class="replace-inputs filter">
                            <th></th>
                            <th class="not-in-filter"></th>
                                                        <th>Grupo</th>
                                                        <th>Alicuota %</th>
                                                        <th class="hidden">¿Es proveedor?</th>
                                                        <th class="not-in-filter"></th>
                        </tr>
                        <tr class="headers">
                            <th class="no-order entity_id"></th>
                            <th class="text-center table-checkbox no-order">
                                <input type="checkbox" class="group-checkable" data-set="#table-iibbcaba .checkboxes" />
                            </th>
                                                        <th>Grupo</th>
                                                        <th>Alicuota</th>
                                                        <th class="hidden">¿Es proveedor?</th>
                                                        <th class="text-center no-order ctn_acciones">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
	var esProveedor = {{ esProveedor }};
</script>
{% endblock %} 

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/custom/compras/iibbcaba/index.js') }}" ></script>
{% endblock %}
