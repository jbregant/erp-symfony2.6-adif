{% extends '::base.html.twig' %}


{% block javascripts %}
    {{ parent() }}
    <!-- <script src="{{ asset('js/custom/iibbcaba/new.js') }}" ></script> -->
{% endblock %}

{% set edit = form.vars.value.id != null %}

{% block body -%}
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">{% if edit %}{{ entity }}{% else %}Nuevo grupo{% endif %}</div>
            
            <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>
            </div>
        </div>
        <div class="portlet-body form">
        {{ form_start(form, {'attr': {'class' : 'horizontal-form','novalidate': 'novalidate'} }) }}
        
        {% include ':Form:fieldsErrors.html.twig' %}
            
         
            {% if edit %} 
                <input type="hidden" name="_method" value="PUT" />
            {% endif %} 
        
			<input 
				type="hidden"
				name="esProveedor"
				id="esProveedor"
				value="{{ esProveedor }}"
			/>
            <div class="form-body">
                <div class="row">
					<div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.grupo) }}
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    {{ form_widget(form.grupo) }}
                                </div>
                        </div>
                    </div>
                    
					<div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.alicuota) }}
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    {{ form_widget(form.alicuota) }}
                                </div>
                        </div>
                    </div>
				</div>
				
            </div>                

            <div class="form-actions">
                <div class="pull-left">
                    <button type="button" class="btn default button-back" 
                            back-url="{{ path('iibb_caba') }}">Cancelar</button>
                </div>
                <div class="pull-right">
                    {{ form_widget(form.submit, {'attr': {'class': 'btn blue'}}) }}
                </div>
            </div>
                
            {{ form_widget(form._token) }}
        
            {{ form_end(form, {"render_rest": false}) }}
        </div>
    </div>
{% endblock %}
