{% extends '::base_reducido.html.twig' %}

{% block body -%}
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">
                Detalles de la entidad autorizante: <strong>{{ entity }}</strong>
            </div>
            <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>                
            </div>
        </div>
        <div class="portlet-body">
            <div class="row">                
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Denominaci&oacute;n</label>
                        <div class="detalle_show">{{ entity.denominacionEntidadAutorizante }}</div>
                    </div>
                </div>                   
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Grupo</label>
                        <div class="detalle_show">{{ entity.grupo }}</div>
                    </div>
                </div>              
                <div class="col-md-2">
                    <div class="form-group">
                        <label class="control-label">Monto Desde</label>
                        <div class="detalle_show">{{ entity.montoDesde|money_format }}</div>
                    </div>
                </div>               
                <div class="col-md-2">
                    <div class="form-group">
                        <label class="control-label">Monto Hasta</label>
                        <div class="detalle_show">{{ entity.montoHasta|money_format }}</div>
                    </div>
                </div>                   
            </div>
            <div class="form-actions">
                <button type="button" class="btn default button-back" 
                        back-url="{{ path('entidadautorizante') }}">
                    <i class="m-icon-swapleft"></i> Volver
                </button>
            </div>
        </div>
    </div>
{% endblock %}
