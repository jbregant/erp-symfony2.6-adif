{% extends '::base_reducido.html.twig' %}

{% block stylesheets %}

    {{ parent() }}

    <link href="{{ asset(css_path ~ 'custom/compras/clienteproveedor/clienteproveedor.css') }}" rel="stylesheet" type="text/css" />

    <link href="{{ asset(theme_path ~ 'plugins/jquery-magnific-popup/css/magnific-popup.css') }}" rel="stylesheet" type="text/css" />

    <link href="{{ asset(css_path ~ 'compact.css') }}" rel="stylesheet" type="text/css" />

{% endblock %}

{% block body -%}
    <div class="portlet box blue">

        <div class="portlet-title">
            <div class="caption">
                Detalles del proveedor: <strong>{{ entity }}</strong>
            </div>
            <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>                
            </div>
        </div>

        <div class="portlet-body">

            <div class="tabbable-custom nav-justified">

                <ul class="nav nav-tabs nav-justified">
                    <li class="active">
                        <a href="#tab_1" data-toggle="tab">General </a>
                    </li>
                    <li class="">
                        <a href="#tab_2" data-toggle="tab">Datos de contacto </a>
                    </li>
                    <li class="">
                        <a href="#tab_3" data-toggle="tab">Datos impositivos </a>
                    </li>
                    <li class="">
                        <a href="#tab_4" data-toggle="tab">Datos comerciales </a>
                    </li>
                    <li class="">
                        <a href="#tab_5" data-toggle="tab">Calificaciones </a>
                    </li>
                </ul>

                <div class="tab-content">

                    {# TAB 1 - General #}
                    <div id="tab_1" class="tab-pane active">
                        {% include '@ADIFCompras/Proveedor/show.datos_generales.html.twig' with {'proveedor': entity}  %}
                    </div>

                    {# TAB 2 - Datos de Contacto #}
                    <div id="tab_2" class="tab-pane">
                        {% include '@ADIFCompras/Proveedor/show.datos_contacto.html.twig' with {'proveedor': entity}  %}
                    </div>

                    {# TAB 3 - Datos Impositivos #}
                    <div id="tab_3" class="tab-pane">
                        {% include '@ADIFCompras/Proveedor/show.datos_impositivos.html.twig' with {'proveedor': entity}  %}
                    </div>

                    {# TAB 4 - Datos Comerciales #}
                    <div id="tab_4" class="tab-pane">
                        {% include '@ADIFCompras/Proveedor/show.datos_comerciales.html.twig' with {'proveedor': entity}  %}
                    </div>

                    {# TAB 5 - Calificaciones #}
                    <div id="tab_5" class="tab-pane">
                        {% include '@ADIFCompras/Proveedor/show.datos_calificacion.html.twig' with {'proveedor': entity}  %}
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <button type="button" class="btn default button-back" 
                        back-url="{{ path('proveedor') }}">
                    <i class="m-icon-swapleft"></i> Volver
                </button>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script src="{{ asset(theme_path ~ 'plugins/jquery-magnific-popup/js/jquery.magnific-popup.js') }}" type="text/javascript"></script>

    <script src="{{ asset(js_path ~ 'custom/compras/clienteproveedor/show.js') }}" ></script>

    <script type="text/javascript">
        document.body.classList.add('compact');
    </script>

{% endblock %}
