{% extends '::base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/custom/compras/cotizacion/new.js') }}" ></script>
{% endblock %}

{% set edit = form.vars.value.id != null %}

{% block body -%}
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">
                <i class="fa fa-reorder"></i>Cotizaci&oacute;n
            </div>
            <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>
            </div>
        </div>
        <div class="portlet-body form">
        {{ form_start(form, {'attr': {'class' : 'horizontal-form','novalidate': 'novalidate'} }) }}
        
            {% include ':Form:fieldsErrors.html.twig' %}
         
            {% if edit %} 
                <input type="hidden" name="_method" value="PUT" />
            {% endif %} 

            <div class="form-body">
                <div class="row">                        
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.fechaInvitacion) }}
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    {{ form_widget(form.fechaInvitacion) }}
                                </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.fechaCotizacion) }}
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    {{ form_widget(form.fechaCotizacion) }}
                                </div>
                        </div>
                    </div>
                </div>
                <div class="row">                           
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.requerimiento) }}
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    {{ form_widget(form.requerimiento) }}
                                </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.proveedor) }}
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    {{ form_widget(form.proveedor) }}
                                </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-actions right">
                <button type="button" class="btn default button-back" back-url="{{ path('cotizacion') }}">Cancelar</button>
                {{ form_widget(form.submit, {'attr': {'class': 'btn blue'}}) }}
            </div>
            {{ form_widget(form._token) }}
            {{ form_end(form, {"render_rest": false}) }}
        </div>
    </div>
{% endblock %}
