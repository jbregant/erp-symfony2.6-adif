{% extends '::base.html.twig' %}  

{% block body -%}
<div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption">Reporte facturacion por Provincias</div>
                </div>
                <div class="portlet-body">
                 
                    <div class="table-toolbar" style="margin-top: 3em">
                        
                        <div class="btn-group pull-left" style="margin-top: -3em">

                            <div class="col-md-5">
                                <div class="form-group">
                                    <div class="input-group">
                                        <label for="adif_comprasbundle_filtro_fechaInicio" 
                                               class="control-label">Fecha inicio</label>
                                        <div class="input-icon right">
                                            <i class="fa"></i>
                                            <input type="text" id="adif_contablebundle_filtro_fechaInicio" 
                                                   name="adif_contablesbundle_filtro[fechaInicio]" 
                                                   class="form-control datepicker" fecha_custom
                                                   value="{{ "now"|date("d/m/Y") }}">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-5">
                                <div class="form-group">
                                    <div class="input-group">
                                        <label for="adif_comprasbundle_filtro_fechaFin" 
                                               class="control-label">Fecha fin</label>
                                        <div class="input-icon right">
                                            <i class="fa"></i>
                                            <input type="text" id="adif_contablebundle_filtro_fechaFin" 
                                                   name="adif_contablebundle_filtro[fechaFin]" 
                                                   class="form-control datepicker" fecha_custom
                                                   value="{{ "now"|date("d/m/Y") }}">
                                        </div>
                                    </div>
                                </div>
                            </div>
               
                            <div class="col-md-2">
                                       <div class="form-group">
                                           <label class="control-label">&nbsp;</label>
                                           <button class="btn btn-small blue-hoki form-control" id="filtrar">
                                               Filtrar
                                           </button>
                                       </div>
                                   </div>   
                        </div>                        
                        
                    </div>
                    <table 
                        class="table table-bordered table-striped table-condensed flip-content  dt-multiselect export-excel" 
                        id="table-reporte-sum" dataexport-title="r_facturacion_provincias_sum"
                        data-toggler="1">
                        <thead>
                            <tr class="replace-inputs filter">
                                <th></th>
                                <th class="not-in-filter"></th>
                                <th>Provincia</th>
                                <th>Neto</th>
                                <th>Gravado</th>
                                <th>Exento</th>                               
                            </tr>
                            <tr class="headers">
                                <th class="no-order entity_id"></th>
                                <th class="text-center table-checkbox no-order">
                                    <input type="checkbox" class="group-checkable" 
                                           data-set="#table-reporte-sum .checkboxes" />
                                </th>
                                <th class="nowrap text-center">Provincia</th>
                                <th currency class="text-center">Neto</th>
                                <th currency class="text-center">Gravado</th>
                                <th currency class="text-center nowrap">Exento</th>
                            </tr>
                        </thead>
                        <tbody>

                        </tbody>
                    </table>
           
                </div>
            </div>
        </div>
    </div>
                                        
    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption">Reporte facturacion por comprobante</div>
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar" >
                    </div>
                    <table 
                        class="table table-bordered table-striped table-condensed flip-content  dt-multiselect export-excel" 
                        id="table-reporte" dataexport-title="r_facturacion_provincias"
                        data-toggler="1">
                        <thead>
                            <tr class="replace-inputs filter">
                                <th></th>
                                <th class="not-in-filter"></th>
                                <th>Provincia</th>
                                <th>Tipo Comprobante</th>
                                <th>Letra</th>
                                <th>Nro. Comprobante</th>
                                <th>Fecha</th>
                                <th>Destinatario</th>
                                <th>Neto</th>
                                <th>Gravado</th>
                                <th>Exento</th>                               
                            </tr>
                            <tr class="headers">
                                <th class="no-order entity_id"></th>
                                <th class="text-center table-checkbox no-order">
                                    <input type="checkbox" class="group-checkable" 
                                           data-set="#table-reporte .checkboxes" />
                                </th>
                                <th class="nowrap text-center">Provincia</th>
                                <th>Tipo Comprobante</th>
                                <th class="text-center">Letra</th>
                                <th class="text-center">Nro. Comprobante</th>
                                <th class="text-center nowrap">Fecha</th>
                                <th class="text-center">Destinatario</th>
                                <th currency class="text-center">Neto</th>
                                <th currency class="text-center">Gravado</th>
                                <th currency class="text-center nowrap">Exento</th>
                                
                            </tr>
                        </thead>
                        <tbody>

                        </tbody>
                    </table>
           
                </div>
            </div>
        </div>
    </div>
{% endblock %} 

{% block javascripts %}

    {{ parent() }}

    <script src="{{ asset(theme_path ~ 'plugins/jquery-autonumeric/autoNumeric.js') }}" ></script>
    
    <script src="{{ asset('js/config/fechas_filtro.js') }}" ></script>

    <script src="{{ asset(js_path ~ 'custom/compras/cliente/reporte_facturacion_provincias.js') }}" ></script>

{% endblock %}