{% extends '::base.html.twig' %}

{% set edit = form.vars.value.id != null %}

{% block body -%}
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">Cuenta bancaria</div>

            <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>
            </div>
        </div>
        <div class="portlet-body form">
            {{ form_start(form, {'attr': {'class' : 'horizontal-form','novalidate': 'novalidate'} }) }}

            {% include ':Form:fieldsErrors.html.twig' %}

            {% if edit %} 
                <input type="hidden" name="_method" value="PUT" />
            {% endif %} 


            <div class="form-body">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            {{ form_label(form.idBanco)  }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.idBanco) }}
                            </div>
                        </div>
                    </div>                   
                    <div class="col-md-3">
                        <div class="form-group">
                            {{ form_label(form.idTipoCuenta) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.idTipoCuenta) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            {{ form_label(form.numeroSucursal)  }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.numeroSucursal) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            {{ form_label(form.numeroCuenta)  }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.numeroCuenta) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            {{ form_label(form.cbu)  }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.cbu) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.cuentaContable) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.cuentaContable) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            {{ form_label(form.tipoMoneda) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.tipoMoneda) }}
                            </div>
                        </div>
                    </div>                            
                    <div class="col-md-2">
                        <div class="form-group">
                            {{ form_label(form.estaActiva) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.estaActiva) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>              

            <div class="form-actions">
                <div class="pull-left">
                    <button type="button" class="btn default button-back" 
                            back-url="{{ path('cuentas_adif') }}">Cancelar</button>
                </div>
                <div class="pull-right">
                    {{ form_widget(form.submit, {'attr': {'class': 'btn blue'}}) }}
                </div>
            </div>

            {{ form_widget(form._token) }}

            {{ form_end(form, {"render_rest": false}) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script>
        $('form[name=adif_recursoshumanosbundle_cuentabancariaadif]').validate();

        // Validacion CBU
        $('#adif_recursoshumanosbundle_cuentabancariaadif_cbu').rules('add', {
            cbu: true
        });

        $('#adif_recursoshumanosbundle_cuentabancariaadif_cbu')
                .inputmask({mask: "9", repeat: 22, placeholder: ""});
    </script>

{% endblock %}
