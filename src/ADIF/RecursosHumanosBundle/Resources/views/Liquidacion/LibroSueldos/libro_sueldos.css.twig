* {
    font-size: 8pt;
}

body {
    font-family: 'Arial';
    padding: 0;
}

table{
	border-collapse: collapse;
}

.w-5{ width: 5% }        
.w-10{ width: 10% }        
.w-12{ width: 12.5% }        
.w-15{ width: 15% }        
.w-20{ width: 20%; }
.w-25{ width: 25%; }
.w-30{ width: 30%; }
.w-35{ width: 35%; }
.w-50{ width: 50%; }
.w-60{ width: 60%; }
.w-100{ width: 100%; }

.t-left{ text-align: left; }
.t-right{ text-align: right; }
.t-center{ text-align: center; }
.t-justify{ text-align: justify; }


.titulo, .direccion, .cuil, .actividad, .periodo{
	font-size: 8pt;
}

.datos_basicos{
	border-top: 1px solid #000;
	border-bottom: 1px solid #000;
	margin-top: 5px;
}

.datos_basicos > tbody > tr > td, 
.table_conceptos > tbody > tr.header, 
.table_totales > tbody > tr,
.periodo{
	font-weight: bold;
}

.table_conceptos > tbody > tr.header {
	border-bottom: 1px solid #000;
	text-align: center;
}

.table_totales > tbody > tr > td{
	text-align: right;
}

.monospc, .concepto td{
    font-family: 'Courier new'; 
}
