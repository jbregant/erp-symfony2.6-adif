* {
    font-size: 10px;
}

body {
    font-family: 'Verdana';
    margin: 0;
    padding: 0;
}

table {
    border-collapse: collapse;
    border-left: none;
    margin-top: -1px;
}

td{
    padding: 1px 2px;
}

td.header{
    padding: 2px;
    border-collapse: collapse;
}

table.b-none tbody tr td{
    border-top: none;
    border-bottom: none;
    border-left: none;
    border-right: none;
}

.datos_basicos{
    margin-top: 5mm;
}

.datos_basicos tbody tr td.header{
    text-align: right;
}

.datos_basicos tbody tr td.hlt{
    text-indent: 2px;
}

.bold{
    font-weight: bold;
}

.b-none{
    border-top: none;
    border-bottom: none;
    border-left: none;
    border-right: none;
}
.b-bottom{ border-bottom: 0.5px solid #000;}
.b-top{ border-top: 0.5px solid #000;}

.padding{
    padding: 4px 2px;
}

.t-left{ text-align: left; }
.t-right{ text-align: right; }
.t-center{ text-align: center; }
.t-justify{ text-align: justify; }

.w-5{ width: 5% }        
.w-10{ width: 10% }        
.w-12{ width: 12.5% }        
.w-15{ width: 15% }        
.w-20{ width: 20%; }
.w-25{ width: 25%; }
.w-30{ width: 30%; }
.w-35{ width: 35%; }
.w-50{ width: 50%; }
.w-60{ width: 60%; }
.w-100{ width: 100%; }

.h-5 { height: 5mm; }
.h-10{ height: 10mm; }
.h-15{ height: 15mm; }
.h-20{ height: 20mm; }
.h-25{ height: 25mm; }
.h-30{ height: 30mm; }

.m-top{
    margin-top: 5mm;
}

.m-top-2-5{
    margin-top: 2.5mm;
}

.m-left-10{
    margin-left: 10%;
}

.hlt{
    background-color: #EEE;
    font-weight: bold;
}

.monospc, .concepto td{
    font-family: 'Courier new'; 
    font-size: 12px;
}

.concepto td{
    border: 0;
    border-left:1px solid #000;
    border-right: 1px solid #000;
}

.datos_conceptos{
    margin-bottom: 2mm;
}