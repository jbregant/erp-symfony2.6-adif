* {
    font-size: 11px;
}

body {
    font-family: 'Verdana';
    margin: 0;
    padding: 0;
}

{#.footer{
    position: absolute;
    bottom: 0;
}#}

.page {
    position: relative;
    page-break-after: always;
    height: 360mm;
    width: 100%;
}

table {
    border-collapse: collapse;
    border-left: none;
    margin-top: -1px;
}

td{
    padding: 4px 2px;
}

td.header{
    padding: 2px;
    border-collapse: collapse;
}

.bold{
    font-weight: bold;
}
.b-none{
    border-top: none;
    border-bottom: none;
    border-left: none;
    border-right: none;
}
.b-bottom{ border-bottom: 0.5px solid #000;}
.b-top{ border-top: 0.5px solid #000;}

.padding{
    padding: 4px 2px;
}

.t-right{ text-align: right; }
.t-center{ text-align: center; }
.t-justify{ text-align: justify; }

.w-5{ width: 5% }        
.w-10{ width: 10% }        
.w-12{ width: 12.5% }        
.w-15{ width: 15% }        
.w-20{ width: 20%; }
.w-25{ width: 25%; }
.w-30{ width: 30%; }
.w-35{ width: 35%; }
.w-50{ width: 50%; }
.w-60{ width: 60%; }
.w-100{ width: 100%; }

.h-5 { height: 5mm; }
.h-10{ height: 10mm; }
.h-15{ height: 15mm; }
.h-20{ height: 20mm; }
.h-25{ height: 25mm; }
.h-30{ height: 30mm; }

.m-top{
    margin-top: 5mm;
}

.m-top-2-5{
    margin-top: 2.5mm;
}

.m-left-10{
    margin-left: 10%;
}

.hlt{
    background-color: #EEE;
    font-weight: bold;
}

span.clear{
    float: left;
    clear: both;
    display: inline-block;
}

.monospc, .concepto td{
    font-family: 'Courier new'; 
	/* Fix Impresion para Debian - @gluis */
    font-size: 12.637px;
}

.concepto td{
    border: 0;
    border-left:1px solid #000;
    border-right: 1px solid #000;
}

.v-align-top, .v-align-top td {
    vertical-align: top;
}

.v-align-bottom, .v-align-bottom td {
    vertical-align: bottom;
}

.v-align-middle, .v-align-middle td {
    vertical-align: middle;
}
