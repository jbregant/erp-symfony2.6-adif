                            {% endfor %}#}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 

{% block javascripts %}

    {{ parent() }}

    <script src="{{ asset(theme_path ~ 'plugins/jquery-autonumeric/autoNumeric.js') }}" ></script>

    <script src="{{ asset(js_path ~ 'custom/rrhh/consultoria/consultor/reporte_resumen_cuenta_corriente.js') }}" ></script>

