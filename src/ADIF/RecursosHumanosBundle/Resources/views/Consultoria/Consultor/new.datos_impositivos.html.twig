                {% for cai in form.cais%}
                    {% include 'ADIFRecursosHumanosBundle:Consultoria/Consultor:prototype.cai_consultor.html.twig' %}
                {% endfor %}
            </div>

            <div class="row">
                <div class="col-md-12">
                    <a href="#" class="btn btn-sm green-jungle 
                       prototype-link-add-cai tooltips">
                        Agregar CAI <i class="fa fa-plus"></i>
                    </a>
                </div>
            </div>
        </div>
    </div>

</fieldset>

