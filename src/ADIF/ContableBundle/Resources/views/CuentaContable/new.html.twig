{% extends '::base.html.twig' %}

{% block stylesheets %}

    {{ parent() }}

    <link href="{{ asset(theme_path ~ 'plugins/jstree/dist/themes/default/style.css') }}" rel="stylesheet" type="text/css" />

{% endblock %}

{% set edit = form.vars.value.id != null %}

{% block body -%}
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">Cuenta contable</div>
            <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>
            </div>
        </div>
        <div class="portlet-body form">
            {{ form_start(form, {'attr': {'class' : 'horizontal-form','novalidate': 'novalidate'} }) }}

            {% include ':Form:fieldsErrors.html.twig' %}

            {% if edit %} 
                <input type="hidden" name="_method" value="PUT" />
            {% endif %} 

            <div class="form-body">

                <div class="row">
                    <div class="col-md-4"> 
                        <div class="form-group">
                            {{ form_label(form.cuentaContablePadre)  }}
                            <a href=#" data-original-title="Buscar cuenta contable"
                               class="pull-right label label-sm label-success tooltips btn-search-cuenta-contable">
                                <i class="fa fa-search"></i>
                            </a>
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.cuentaContablePadre) }}
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4"> 
                        <div class="form-group">
                            {{ form_label(form.cuentaPresupuestariaEconomica)  }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.cuentaPresupuestariaEconomica) }}
                            </div>
                        </div>
                    </div>

                    <div class="col-md-4"> 
                        <div class="form-group">
                            {{ form_label(form.cuentaPresupuestariaObjetoGasto)  }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.cuentaPresupuestariaObjetoGasto) }}
                            </div>
                        </div>
                    </div>
                </div> 


                <div class="row cleardiv">
                    <div class="col-md-4">
                        <div class="form-group">
                            {{ form_label(form.codigoCuentaContable)  }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.codigoCuentaContable) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.denominacionCuentaContable)  }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.denominacionCuentaContable) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            {{ form_label(form.esImputable)  }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.esImputable) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-2">
                        <div class="form-group">
                            {{ form_label(form.activa)  }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.activa) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            {{ form_label(form.tipoMoneda)  }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.tipoMoneda) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.descripcionCuentaContable)  }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.descripcionCuentaContable) }}
                            </div>
                        </div>
                    </div>
                </div>

                {#
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                        {{ form_label(form.estadoCuentaContable)  }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                            {{ form_widget(form.estadoCuentaContable) }}
                            </div>
                        </div>
                    </div>
                </div>
                #}

            </div>

            <div class="form-actions">
                <div class="pull-left">
                    <button type="button" class="btn default button-back" back-url="{{ path('cuentacontable') }}">Cancelar</button>
                </div>
                <div class="pull-right">
                    {{ form_widget(form.submit, {'attr': {'class': 'btn blue'}}) }}
                </div>
            </div>

            {{ form_widget(form._token) }}

            {{ form_end(form, {"render_rest": false}) }}
        </div>
    </div>

    {% include 'ADIFContableBundle:CuentaContable:searchForm.html.twig' %}

{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script src="{{ asset(theme_path ~ 'plugins/jstree/dist/jstree.min.js') }}" ></script>

    <script type="text/javascript">

        var mask = "{{ mask }}";

        var pathCodigoInicial = "{{ path('cuentacontable_codigoinicial') }}";

    </script>

    <script src="{{ asset(js_path ~ 'custom/contable/cuentacontable/new.js') }}" ></script>

    <script src="{{ asset(js_path ~ 'custom/contable/cuentacontable/search.js') }}" ></script> 

{% endblock %}