{% extends '::base.html.twig' %}

{% set edit = form.vars.value.id != null %}

{% block body -%}
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">Tipo de egreso de valor</div>

            <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>
            </div>
        </div>
        <div class="portlet-body form">
            {{ form_start(form, {'attr': {'class' : 'horizontal-form','novalidate': 'novalidate'} }) }}

            {% include ':Form:fieldsErrors.html.twig' %}

            {% if edit %} 
                <input type="hidden" name="_method" value="PUT" />
            {% endif %} 

            <div class="form-body">
                <div class="row">                                
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.denominacion) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.denominacion) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.descripcion) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.descripcion) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-9">
                        <div class="form-group">
                            {{ form_label(form.cuentaContable) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.cuentaContable) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            {{ form_label(form.permiteReposicion) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.permiteReposicion) }}
                            </div>
                        </div>
                    </div>
                </div>
				<div class="row">
					<div class="col-md-3">
						<div class="form-group">
                            {{ form_label(form.cuentaContablReconocimiento) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.cuentaContablReconocimiento) }}
                            </div>
                        </div>
                    </div>
					<div class="col-md-3">
						<div class="form-group">
                            {{ form_label(form.cuentaContablGanancia) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.cuentaContablGanancia) }}
                            </div>
                        </div>
                    </div>
					<div class="col-md-3">
						<div class="form-group">
                            {{ form_label(form.limitaPersona) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.limitaPersona) }}
                            </div>
                        </div>
                    </div>
					<div class="col-md-3">
						<div class="form-group">
                            {{ form_label(form.limitaGerencia) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.limitaGerencia) }}
                            </div>
                        </div>
                    </div>
				</div>
				<div class="row">
					<div class="col-md-3">
						<div class="form-group">
                            {{ form_label(form.cantidadMaxima) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.cantidadMaxima) }}
                            </div>
                        </div>
                    </div>
					<div class="col-md-3">
						<div class="form-group">
                            {{ form_label(form.maximoComprobante) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.maximoComprobante) }}
                            </div>
                        </div>
                    </div>
					<div class="col-md-3">
						<div class="form-group">
                            {{ form_label(form.minimoRendicion) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.minimoRendicion) }}
                            </div>
                        </div>
                    </div>
				</div>
            </div>                

            <div class="form-actions">
                <div class="pull-left">
                    <button type="button" class="btn default button-back" 
                            back-url="{{ path('tipoegresovalor') }}">Cancelar</button>
                </div>
                <div class="pull-right">
                    {{ form_widget(form.submit, {'attr': {'class': 'btn blue'}}) }}
                </div>
            </div>

            {{ form_widget(form._token) }}

            {{ form_end(form, {"render_rest": false}) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script>
        $('form[name=adif_contablebundle_egresovalor_tipoegresovalor]').validate();
    </script>

{% endblock %}
