{% extends '::base.html.twig' %}

{% block stylesheets %}

    {{ parent() }}

    <link href="{{ asset(theme_path ~ 'plugins/jquery-ui-autocomplete/jquery-ui-autocomplete.min.css') }}" rel="stylesheet" type="text/css" />

    <link href="{{ asset(css_path ~ 'autocomplete.css') }}" rel="stylesheet" type="text/css" />

    <link href="{{ asset(css_path ~ 'compact.css') }}" rel="stylesheet" type="text/css" />

{% endblock%}

{% set edit = form.vars.value.id != null %}

{% block body -%}
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">Egreso de valor</div>

            <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>
            </div>
        </div>
        <div class="portlet-body form">
            {{ form_start(form, {'attr': {'class' : 'horizontal-form','novalidate': 'novalidate'} }) }}

            {% include ':Form:fieldsErrors.html.twig' %}

            {% if edit %} 
                <input type="hidden" name="_method" value="PUT" />
            {% endif %} 

            <div class="form-body">
                <div class="row">     
                    <div class="col-md-4">
                        <div class="form-group">
                            {{ form_label(form.tipoEgresoValor) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.tipoEgresoValor) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            {{ form_label(form.carpeta) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.carpeta) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4 div_gerencia">
                        <div class="form-group">
                            {{ form_label(form.gerencia) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.gerencia) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-5">
                        <div class="form-group">
                            {{ form_label(form.responsableEgresoValor.nombre) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.responsableEgresoValor.nombre) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            {{ form_label(form.responsableEgresoValor.tipoDocumento) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.responsableEgresoValor.tipoDocumento) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            {{ form_label(form.responsableEgresoValor.nroDocumento) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.responsableEgresoValor.nroDocumento) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            {{ form_label(form.importe) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.importe) }}
                            </div>
                        </div>
                    </div> 
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            {{ form_label(form.observaciones) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.observaciones) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>                

            <div class="form-actions">
                <div class="pull-left">
                    <button type="button" class="btn default button-back" 
                            back-url="{{ path('egresovalor') }}">Cancelar</button>
                </div>
                <div class="pull-right">
                    {{ form_widget(form.submit, {'attr': {'class': 'btn blue'}}) }}
                </div>
            </div>

            {{ form_widget(form._token) }}

            {{ form_end(form, {"render_rest": false}) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script type="text/javascript">
        var topes ={{ topes|json_encode|raw }} ;            
    </script>

    <script src="{{ asset(theme_path ~ 'plugins/jquery-ui-autocomplete/jquery-ui-autocomplete.min.js') }}"></script>

    <script src="{{ asset('js/custom/contable/egreso_valor/new.js') }}" ></script>

    <script type="text/javascript">
                document.body.classList.add('compact');
    </script>
    
{% endblock %}
