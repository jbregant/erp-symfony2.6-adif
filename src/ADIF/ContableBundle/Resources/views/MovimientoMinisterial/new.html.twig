{% extends '::base.html.twig' %}

{% set edit = form.vars.value.id != null %}

{% block body -%}
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">Movimiento ministerial</div>

            <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>
            </div>
        </div>
        <div class="portlet-body form">
            {{ form_start(form, {'attr': {'class' : 'horizontal-form','novalidate': 'novalidate'} }) }}

            {% include ':Form:fieldsErrors.html.twig' %}


            {% if edit %} 
                <input type="hidden" name="_method" value="PUT" />
            {% endif %} 

            <div class="form-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            {{ form_label(form.fecha) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.fecha) }}
                            </div>
                        </div>
                    </div>                    
                    <div class="col-md-4">
                        <div class="form-group">
                            {{ form_label(form.esIngreso) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.esIngreso) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            {{ form_label(form.numeroReferencia) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.numeroReferencia) }}
                            </div>
                        </div>
                    </div>                                
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            {{ form_label(form.conceptoTransaccionMinisterial) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.conceptoTransaccionMinisterial) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label required" for="adif_contablebundle_movimientoministerial_cuentaBancariaADIF">Cuenta bancaria ADIF</label>
                            <div class="input-icon right">
                                <i class="fa"></i>
                                <select id="adif_contablebundle_movimientoministerial_cuentaBancariaADIF"
                                        name="adif_contablebundle_movimientoministerial[cuentaBancariaADIF]"
                                        class="form-control choice" required="required"> 
                                    <option value="">-- Cuenta bancaria ADIF --</option>
                                    {% for cuentaBancariaADIF in cuentasBancariasADIF %}
                                        <option value="{{ cuentaBancariaADIF.id }}">{{ cuentaBancariaADIF }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            {{ form_label(form.monto) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.monto) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            {{ form_label(form.detalle) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.detalle) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>                

            <div class="form-actions">
                <div class="pull-left">
                    <button type="button" class="btn default button-back" 
                            back-url="{{ path('movimientoministerial') }}">Cancelar</button>
                </div>
                <div class="pull-right">
                    {{ form_widget(form.submit, {'attr': {'class': 'btn blue'}}) }}
                </div>
            </div>

            {{ form_widget(form._token) }}

            {{ form_end(form, {"render_rest": false}) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script src="{{ asset('js/custom/contable/movimientoministerial/new.js') }}" ></script>

{% endblock %}
