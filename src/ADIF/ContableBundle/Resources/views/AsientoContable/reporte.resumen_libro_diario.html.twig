{% extends '::base.html.twig' %}  

{% block stylesheets %}

    {{ parent() }}

    <link href="{{ asset(css_path ~ 'custom/contable/asientocontable/asientocontable.css') }}" rel="stylesheet" type="text/css" />

{% endblock %}

{% block body -%}

    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption">Libro diario resumido</div>
                </div>

                <div class="portlet-body">        

                    <div class="row">
                        <div class="col-md-2">
                            <div class="form-group">
                                <div class="input-group">
                                    <label for="adif_contablebundle_filtro_fechaInicio" 
                                           class="control-label">Fecha inicio</label>
                                    <div class="input-icon right">
                                        <i class="fa"></i>
                                        <input type="text" id="adif_contablebundle_filtro_fechaInicio" 
                                               name="adif_contablebundle_filtro[fechaInicio]" 
                                               class="form-control datepicker">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="form-group">
                                <div class="input-group">
                                    <label for="adif_contablebundle_filtro_fechaFin" 
                                           class="control-label">Fecha fin</label>
                                    <div class="input-icon right">
                                        <i class="fa"></i>
                                        <input type="text" id="adif_contablebundle_filtro_fechaFin" 
                                               name="adif_contablebundle_filtro[fechaFin]" 
                                               class="form-control datepicker">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-7">
                            <div class="form-group">
                                <label for="adif_contablebundle_filtro_subdiarioAsientoContable" 
                                       class="control-label">Subdiarios</label>
                                <div class="input-icon right">
                                    <i class="fa"></i>
                                    <select multiple class="choice form-control"
                                            id="adif_contablebundle_filtro_subdiarioAsientoContable" name="adif_contablebundle_filtro[subdiarioAsientoContable">
                                        {% for subdiario in subdiarios %}
                                            <option value="{{ subdiario.id }}"> {{ subdiario }}</option>
                                        {% endfor %}
                                    </select>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-1">
                            <div class="form-group">
                                <label class="control-label">&nbsp;</label>
                                <button class="btn btn-small blue-hoki form-control" id="filtrar_libro_diario">
                                    Filtrar
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="row cleardiv">
                        <div class="col-md-12">
                            <div class="portlet box reporte-portlet">
                                <div class="portlet-title">

                                    <div class="caption reporte_contable_title" style="display:none">

                                        <span class="bold">LIBRO DIARIO RESUMIDO</span>

                                        â€” Ejercicio <span class="caption-ejercicio bold"></span>

                                        desde <span class="caption-fecha-desde bold"></span>

                                        hasta <span class="caption-fecha-hasta bold"></span>
                                    </div>

                                    <div class="export-tools">
                                    </div>

                                </div>
                                <div class="portlet-body libro_diario_content">

                                    <div class="table-responsive">
                                        <table class="table table-striped table-hover table-bordered table-condensed export-custom" 
                                               id="resumen_libro_diario_table" dataexport-title="Resumen_Libro_Diario" style="display:none">
                                            <thead>
                                                <tr class="headers">
                                                    <th class="text-center th-subdiario">Subdiario Asiento Contable</th>
                                                    <th class="text-center th-resumen-cuenta">Cuenta contable</th>
                                                    <th class="text-center nowrap">Debe</th>
                                                    <th class="text-center nowrap">Haber</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %} 

{% block javascripts %}

    {{ parent() }}

    <script src="{{ asset('js/custom/contable/asientocontable/reporte.js') }}" ></script>

    <script src="{{ asset('js/custom/contable/asientocontable/resumen_libro_diario.js') }}" ></script>

{% endblock %}