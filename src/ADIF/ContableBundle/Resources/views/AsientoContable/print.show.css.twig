.text-center {
    text-align: center;
}

.text-right {
    text-align: right;
}

.text-left {
    text-align: left;
}

.table_asiento {
    margin: 0;
    padding: 0;
    width: 100%;
}

.table_asiento thead tr th, 
.table_asiento tbody tr th, 
.table_asiento tfoot tr th, 
.table_asiento thead tr td, 
.table_asiento tbody tr td, 
.table_asiento tfoot tr td {
    border: 1px solid #ddd;
}

.caption {
    clear: both;
    font-size: 15px;
    line-height: 18px;
    font-weight: 400;
    margin: 1em 0 0;
    padding: 0;
    margin-bottom: 8px;
}

.caption-header {
    margin: 1.5em 0;    
}

.caption-header strong {
    font-size: 15px; 
}

.col-md-2 {
    float: left;
    width: 13%;
    position: relative;
    min-height: 1px;
    padding-left: 5px;
    padding-right: 5px;
}

.col-md-3 {
    float: left;
    width: 25%;
    position: relative;
    min-height: 1px;
    padding-left: 5px;
    padding-right: 5px;
}

.col-md-7 {
    float: left;
    width: 58.33333333%;
    position: relative;
    min-height: 1px;
    padding-left: 5px;
    padding-right: 5px;
}

.col-md-12 {
    float: left;
    width: 100%;
    position: relative;
    min-height: 1px;
    padding-left: 5px;
    padding-right: 5px;
}
    
.form-group {
    margin-bottom: 15px;
}

.control-label {
    margin-top: 2px;
}

label {
    font-weight: 400;
    font-size: 12px;
    display: inline-block;
    margin-bottom: 5px;
}

.detalle_show {
    font-size: 10px;
    border-top: 1px solid #ccc;
}

.detalle_show, .detalle_table {
    background-color: #F9F9F9;
    color: #555;
    padding: .3em 7.7px !important;
}