{% extends '::base.html.twig' %}


{% block body -%}
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">
                Detalles de la poliza de seguro: <strong>{{ entity }}</strong>
            </div>
            <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>
            </div>
        </div>
        <div class="portlet-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">N&deg; p&oacute;liza</label>
                        <div class="detalle_show">{{ entity.numeroPoliza }}</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Fecha vencimiento</label>
                        <div class="detalle_show">{{ entity.fechaVencimiento|date('d/m/Y') }}</div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Aseguradora</label>
                        <div class="detalle_show">{{ entity.aseguradora }}</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Riesgo cubierto</label>
                        <div class="detalle_show">{{ entity.riesgoCubierto }}</div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">N&deg; tr&aacute;mite original</label>
                        <div class="detalle_show">{{ entity.numeroTramiteEnvio }}</div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Estado p&oacute;liza</label>
                        <div class="detalle_show">{{ entity.EstadoPoliza }}</div>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Estado revisi&oacute;n p&oacute;liza</label>
                        <div class="detalle_show">{{ entity.EstadoRevisionPoliza }}</div>
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <button type="button" class="btn default button-back"
                        back-url="{{ path('polizadocumentofinanciero') }}">
                    <i class="m-icon-swapleft"></i> Volver
                </button>
            </div>
        </div>
    </div>
{% endblock %}
