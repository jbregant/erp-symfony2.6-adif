{% extends '::base.html.twig' %}


{% block body -%}
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">
                Detalles del estado de tramo: <strong>{{ entity }}</strong>
            </div>
            <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>                
            </div>
        </div>
        <div class="portlet-body">
            <div class="row">    
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">C&oacute;digo</label>
                        <div class="detalle_show">{{ entity.codigo }}</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Denominaci&oacute;n</label>
                        <div class="detalle_show">{{ entity.denominacionEstado }}</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Descripci&oacute;n</label>
                        <div class="detalle_show">{{ entity.descripcionEstado|default('-') }}</div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Tipo importancia</label>
                        <div class="detalle_show">{{ entity.tipoImportancia|default('-') }}</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Es editable</label>
                        <div class="detalle_show">{{ entity.esEditable ? 'Si' : 'No' }}</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Genera asiento de obra finalizada</label>
                        <div class="detalle_show">{{ entity.generaAsientoObraFinalizada ? 'Si' : 'No' }}</div>
                    </div>
                </div>
            </div>
            <div class="row">
            </div>

            <div class="form-actions">
                <button type="button" class="btn default button-back" 
                        back-url="{{ path('estadotramo') }}">
                    <i class="m-icon-swapleft"></i> Volver
                </button>
            </div>
        </div>
    </div>
{% endblock %}
