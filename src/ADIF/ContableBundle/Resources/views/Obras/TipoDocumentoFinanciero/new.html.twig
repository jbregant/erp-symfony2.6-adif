{% extends '::base.html.twig' %}

{% block stylesheets %}

    {{ parent() }}

    <link href="{{ asset(css_path ~ 'compact.css') }}" rel="stylesheet" type="text/css" />

{% endblock%}

{% set edit = form.vars.value.id != null %}

{% block body -%}
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">Tipo de documento financiero</div>

            <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>
            </div>
        </div>
        <div class="portlet-body form">
            {{ form_start(form, {'attr': {'class' : 'horizontal-form','novalidate': 'novalidate'} }) }}

            {% include ':Form:fieldsErrors.html.twig' %}

            {% if edit %} 
                <input type="hidden" name="_method" value="PUT" />
            {% endif %} 

            <div class="form-body">
                <div class="row">             
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.nombre) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.nombre) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.cuentaContable) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.cuentaContable) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.regimenRetencionIVA) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.regimenRetencionIVA) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.regimenRetencionIIBB) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.regimenRetencionIIBB) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.regimenRetencionSUSS) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.regimenRetencionSUSS) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.regimenRetencionGanancias) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.regimenRetencionGanancias) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.imputaCuentaTipoDocumento) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.imputaCuentaTipoDocumento) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>                

            <div class="form-actions">
                <div class="pull-left">
                    <button type="button" class="btn default button-back" 
                            back-url="{{ path('tipodocumentofinanciero') }}">Cancelar</button>
                </div>
                <div class="pull-right">
                    {{ form_widget(form.submit, {'attr': {'class': 'btn blue'}}) }}
                </div>
            </div>

            {{ form_widget(form._token) }}

            {{ form_end(form, {"render_rest": false}) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script type="text/javascript">
        document.body.classList.add('compact');
    </script>

{% endblock %}
