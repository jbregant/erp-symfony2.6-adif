                            <div class="detalle_show">{{ puntoVentaClaseContrato.claseContrato }}</div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="control-label">Monto m&iacute;nimo</label>
                            <div class="detalle_show">{{ puntoVentaClaseContrato.montoMinimo|money_format }}</div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="control-label">Monto m&aacute;ximo</label>
                            <div class="detalle_show">{{ puntoVentaClaseContrato.montoMaximo|money_format }}</div>
                        </div>
                    </div>
                </div>
            {% endfor %}

            <div class="form-actions">
                <button type="button" class="btn default button-back" 
                        back-url="{{ path('puntosventa') }}">
                    <i class="m-icon-swapleft"></i> Volver
                </button>
            </div>
        </div>
    </div>
{% endblock %}
