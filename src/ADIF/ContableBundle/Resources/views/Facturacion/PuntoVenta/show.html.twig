            <div class="row">    
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">N&uacute;mero</label>
                        <div class="detalle_show">{{ entity.numero }}</div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label class="control-label">Electr&oacute;nico</label>
                        <div class="detalle_show">    
                            {{ entity.generaComprobanteElectronico ? 'SÃ­' : 'No'  }}         
