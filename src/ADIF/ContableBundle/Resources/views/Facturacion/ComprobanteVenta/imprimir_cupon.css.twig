@page {
  margin: 0;
  marks: none;  
}

body {
    margin:0;
    padding:0;
    font-size: 0.85em;
    font-family: Helvetica; 
}

hr {
    margin: 0;
    padding: 0;
}

.cupon_container {
    height: 130mm; 
    width: 185mm;
    border: 2px solid black;
    margin: 0 15mm;
}

.datos_adif {
    width: 75mm; 
    text-align: center; 
    font-size: 10px;
}

.numero_cupon {
    width: 150mm;
    text-align: left; 
    font-size: 20px;
    font-weight: bold;
    border-bottom: 2px solid black;
    padding-left: 3mm;
}

#tabla_datos_cliente, #tabla_datos_contrato, #tabla_datos_pago {
    width: 185mm;
    font-weight: bold;
    font-size: 13px;
}

#tabla_datos_cliente td, #tabla_datos_contrato td, #tabla_datos_pago td {    
    padding-left: 5mm;
}

#tabla_datos_condicion_pago tr td:first-child {
    width: 35mm;
}

.square {
    width: 3mm; 
    border: 1px solid black;
}
