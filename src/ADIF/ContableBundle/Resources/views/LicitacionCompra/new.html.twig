{% extends '::base.html.twig' %}

{% block stylesheets %}

    {{ parent() }}

    <link href="{{ asset(css_path ~ 'compact.css') }}" rel="stylesheet" type="text/css" />

{% endblock %}

{% set edit = form.vars.value.id != null %}

{% block body -%}
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">Licitacion de compra</div>

            <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>
            </div>
        </div>
        <div class="portlet-body form">
            {{ form_start(form, {'attr': {'class' : 'horizontal-form','novalidate': 'novalidate'} }) }}

            {% include ':Form:fieldsErrors.html.twig' %}

            {% if edit %} 
                <input type="hidden" name="_method" value="PUT" />
            {% endif %} 

            <div class="form-body">
                <div class="row">                                
                    <div class="col-md-2">
                        <div class="form-group">
                            {{ form_label(form.tipoContratacion) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.tipoContratacion) }}
                            </div>
                        </div>
                    </div>                             
                    <div class="col-md-2">
                        <div class="form-group">
                            {{ form_label(form.numero) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.numero) }}
                            </div>
                        </div>
                    </div>                            
                    <div class="col-md-2">
                        <div class="form-group">
                            {{ form_label(form.anio) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.anio) }}
                            </div>
                        </div>
                    </div>

                    <div class="col-md-2">
                        <div class="form-group">
                            {{ form_label(form.fechaApertura) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.fechaApertura) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            {{ form_label(form.importePliego) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.importePliego) }}
                            </div>
                        </div>
                    </div>

                    <div class="col-md-2">
                        <div class="form-group">
                            {{ form_label(form.importeLicitacion) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.importeLicitacion) }}
                            </div>
                        </div>
                    </div>
                </div>                

                <div class="form-actions">
                    <div class="pull-left">
                        <button type="button" class="btn default button-back" 
                                back-url="{{ path('licitacion_compra') }}">Cancelar</button>
                    </div>
                    <div class="pull-right">
                        {{ form_widget(form.submit, {'attr': {'class': 'btn blue'}}) }}
                    </div>
                </div>

                {{ form_widget(form._token) }}

                {{ form_end(form, {"render_rest": false}) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script src="{{ asset('js/custom/contable/licitacioncompra/new.js') }}" ></script>

    <script type="text/javascript">
        document.body.classList.add('compact');
    </script>

{% endblock %}
