{% extends '::base.html.twig' %}


{% block body -%}
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">
                Detalles de la regimenretencion: <strong>{{ entity }}</strong>
            </div>
            <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>                
            </div>
        </div>
        <div class="portlet-body">
            <div class="row">    
                <div class="col-md-9">
                    <div class="form-group">
                        <label class="control-label">Denominaci&oacute;n</label>
                        <div class="detalle_show">{{ entity.denominacion }}</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="control-label">C&oacute;digo SIAP</label>
                        <div class="detalle_show">{{ entity.codigoSiap }}</div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="control-label">Al&iacute;cuota</label>
                        <div class="detalle_show">{{ entity.alicuota ~ ' %' }}</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="control-label">M&iacute;nimo exento</label>
                        <div class="detalle_show">{{ entity.minimoExento|money_format }}</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="control-label">M&iacute;nimo no imponible</label>
                        <div class="detalle_show">{{ entity.minimoNoImponible|money_format }}</div>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="control-label">M&iacute;nimo retenci&oacute;n</label>
                        <div class="detalle_show">{{ entity.minimoRetencion|money_format }}</div>
                    </div>
                </div>
            </div>
            <div class="form-actions">
                <button type="button" class="btn default button-back" 
                        back-url="{{ path('regimenretencion') }}">
                    <i class="m-icon-swapleft"></i> Volver
                </button>
            </div>
        </div>
    </div>
{% endblock %}
