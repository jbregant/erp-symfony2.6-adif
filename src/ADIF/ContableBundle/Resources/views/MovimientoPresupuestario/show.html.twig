{% extends '::base.html.twig' %}


{% block body -%}
<div class="portlet box blue">
    <div class="portlet-title">
        <div class="caption">
            Detalles del movimiento presupuestario
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse">
            </a>                
        </div>
    </div>
    <div class="portlet-body">
        <div class="row">    
            <div class="col-md-3">
                <div class="form-group">
                    <label class="control-label">Fecha</label>
                    <div class="detalle_show">{{ entity.fechaCreacion|date('d/m/Y') }}</div>
                </div>
            </div>
            <div class="col-md-9">
                <div class="form-group">
                    <label class="control-label">Usuario</label>
                    <div class="detalle_show">{{ entity.usuario }}</div>
                </div>
            </div>
        </div>
        <div class="row">    
            <div class="col-md-2">
                <div class="form-group">
                    <label class="control-label">Tipo</label>
                    <div class="detalle_show">{{ entity.tipoMovimientoPresupuestario }}</div>
                </div>
            </div>   
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Cuenta origen</label>
                    <div class="detalle_show">{{ entity.cuentaPresupuestariaOrigen|default('-') }}</div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Cuenta destino</label>
                    <div class="detalle_show">{{ entity.cuentaPresupuestariaDestino }}</div>
                </div>
            </div>
            <div class="col-md-2">
                <div class="form-group">
                    <label class="control-label">Monto</label>
                    <div class="detalle_show">{{ entity.monto|money_format }}</div>
                </div>
            </div>
        </div>
        <div class="row">    
            <div class="col-md-12">
                <div class="form-group">
                    <label class="control-label">Detalle</label>
                    <div class="detalle_show">{{ entity.detalle|default('-') }}</div>
                </div>
            </div>
        </div>
        <div class="form-actions">
            <button type="button" class="btn default button-back" 
                    back-url="{{ path('movimientopresupuestario') }}">
                <i class="m-icon-swapleft"></i> Volver
            </button>
        </div>
    </div>
</div>
{% endblock %}
