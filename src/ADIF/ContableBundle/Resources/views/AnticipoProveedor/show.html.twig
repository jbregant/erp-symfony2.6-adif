{% extends '::base.html.twig' %}

{% block body -%}
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">
                Detalles del anticipo de proveedor
            </div>
            <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>                
            </div>
        </div>
        <div class="portlet-body">
            <div class="row">    
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="control-label">Fecha</label>
                        <div class="detalle_show">{{ entity.fecha|date('d/m/Y') }}</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Proveedor</label>
                        <div class="detalle_show">{{ entity.proveedor }}</div>
                    </div>
                </div>            
                <div class="col-md-3">
                    <div class="form-group">
                        <label class="control-label">Detalle</label>
                        <div class="detalle_show">{{ entity.detalle|default('-') }}</div>
                    </div>
                </div>            
                <div class="col-md-2">
                    <div class="form-group">
                        <label class="control-label">Monto</label>
                        <div class="detalle_show">{{ entity.monto|money_format }}</div>
                    </div>
                </div>
            </div>
            <div class="row">    
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label">Observaci&oacute;n</label>
                        <div class="detalle_show">{{ entity.observacion|default('-') }}</div>
                    </div>
                </div> 
            </div>

            <div class="form-actions">
                <button type="button" class="btn default button-back" 
                        back-url="{{ path('anticiposproveedor') }}">
                    <i class="m-icon-swapleft"></i> Volver
                </button>
            </div>
        </div>

    </div>
{% endblock %}
