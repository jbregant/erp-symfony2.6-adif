{% extends '::base.html.twig' %}  



{% block body -%}

    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption">Configuraci&oacute;n EPE 3</div>
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar">
                    </div>
                    <table class="table table-striped table-hover table-bordered table-condensed export-custom" 
                           id="configuracion_epe_3" dataexport-title="EPE_3">
                        <thead>
                            <tr class="headers">
                                <th>Concepto</th>
                                <th>Cuentas Contables</th>
                                <th class="text-center ctn_acciones">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for tipo in epe3Configuracion %}
                                <tr>
                                    <td class="bold">{{loop.index}}. {{tipo.denominacion}}</td>
                                    <td></td>
                                    <td></td>
                                </tr>
                                {% for concepto in tipo.conceptos %}
                                    <tr>
                                        <td style="padding-left: 1em;">{{loop.index}}. {{concepto.denominacion}}</td>
                                        <td>{{concepto.cuentas}}</td>
                                        <td class="ctn_acciones text-center nowrap">
                                            <a href="" class="btn btn-xs green tooltips asignar-conceptos" data-id-concepto="{{concepto.id}}" data-concepto="{{concepto.denominacion}}" data-original-title="Asignar cuentas">
                                                <i class="fa fa-pencil"></i>
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/custom/contable/presupuesto/configuracion_epe3.js') }}" ></script>
{% endblock %}
