{% extends '::base.html.twig' %}  



{% block body -%}

    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption">Configuraci&oacute;n EPE 2</div>
                </div>
                <div class="portlet-body">
                    <div class="table-toolbar">
                    </div>
                    <table class="table table-striped table-hover table-bordered table-condensed export-custom" 
                           id="configuracion_epe_2" dataexport-title="EPE_2">
                        <thead>
                            <tr class="headers">
                                <th>Concepto</th>
                                <th>Cuentas Contables</th>
                                <th class="text-center ctn_acciones">Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for concepto in epe2Configuracion %}
                                <tr>
                                    <td>{{concepto.denominacion}}</td>
                                    <td>{{concepto.cuentas}}</td>
                                    <td class="ctn_acciones text-center nowrap">
                                        <a href="" class="btn btn-xs green tooltips asignar-conceptos" data-id-concepto="{{concepto.id}}" data-concepto="{{concepto.denominacion}}" data-original-title="Asignar cuentas">
                                            <i class="fa fa-pencil"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 

{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/custom/contable/presupuesto/configuracion_epe2.js') }}" ></script>
{% endblock %}
