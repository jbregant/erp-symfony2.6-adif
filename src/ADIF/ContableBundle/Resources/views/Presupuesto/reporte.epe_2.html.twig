{% extends '::base.html.twig' %}  

{% block stylesheets %}

    {{ parent() }}

    <link href="{{ asset(css_path ~ 'custom/contable/presupuesto/epe.css') }}" rel="stylesheet" type="text/css" />

{% endblock %}

{% block body -%}

    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption">EPE 2 - Ejecuci&oacute;n de caja</div>
                </div>

                <div class="portlet-body">        

                    <div class="row">

                        <div class="col-md-2">
                            <div class="form-group">
                                <div class="input-group">
                                    <label for="adif_contablebundle_filtro_ejercicio" 
                                           class="control-label">Ejercicio</label>
                                    <div class="input-icon right">
                                        <i class="fa"></i>
                                        <input type="text" id="adif_contablebundle_filtro_ejercicio" 
                                               name="adif_contablebundle_filtro[ejercicio]" 
                                               class="form-control nomask novalidate">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="form-group">
                                <div class="input-group">
                                    <label for="adif_contablebundle_filtro_fechaInicio" 
                                           class="control-label">Mes inicio</label>
                                    <div class="input-icon right">
                                        <i class="fa"></i>
                                        <input type="text" id="adif_contablebundle_filtro_fechaInicio" 
                                               data-mes=""
                                               name="adif_contablebundle_filtro[fechaInicio]" 
                                               class="form-control nomask novalidate">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-2">
                            <div class="form-group">
                                <div class="input-group">
                                    <label for="adif_contablebundle_filtro_fechaFin" 
                                           class="control-label">Mes fin</label>
                                    <div class="input-icon right">
                                        <i class="fa"></i>
                                        <input type="text" id="adif_contablebundle_filtro_fechaFin"
                                               data-mes=""
                                               name="adif_contablebundle_filtro[fechaFin]" 
                                               class="form-control nomask novalidate">
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-1">
                            <div class="form-group">
                                <label class="control-label">&nbsp;</label>
                                <button  id="filtrar_epe" class="btn btn-small blue-hoki form-control">
                                    Filtrar
                                </button>
                            </div>
                        </div>
                    </div>

                    <div class="row cleardiv">
                        <div class="col-md-12">
                            <div class="portlet box reporte-portlet">
                                <div class="portlet-title">

                                    <div class="caption reporte_title" style="display:none">

                                        <span class="bold">
                                            EPE 2                                              
                                        </span>

                                        â€” Ejercicio <span class="caption-ejercicio bold"></span>

                                        desde <span class="caption-fecha-desde bold"></span>

                                        hasta <span class="caption-fecha-hasta bold"></span>
                                    </div>

                                    <div class="export-tools">
                                    </div>
                                </div>
                                <div class="portlet-body epe_content">
                                    <div class="table-responsive">
                                        <table class="table table-striped table-hover table-bordered table-condensed export-custom" 
                                               id="epe_2_table" dataexport-title="EPE_2" style="display:none">
                                            <thead>
                                                <tr class="headers">
                                                    <th class="text-center nowrap" width="52%">Concepto</th>
                                                    <th class="text-center" export-format="currency" width="12%">Sector p&uacute;blico</th>
                                                    <th class="text-center" export-format="currency" width="12%">Sector privado</th>
                                                    <th class="text-center" export-format="currency" width="12%">Ejecuci&oacute;n mes</th>
                                                    <th class="text-center" export-format="currency" width="12%">Total acumulado</th>                                          
                                                </tr>
                                            </thead>
                                            <tbody>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 

{% block javascripts %}

    {{ parent() }}
    <script src="{{ asset(theme_path ~ 'plugins/jquery-autonumeric/autoNumeric.js') }}" ></script>

    <script src="{{ asset('js/custom/contable/presupuesto/reporte_epe.js') }}" ></script>
    <script src="{{ asset('js/custom/contable/presupuesto/reporte_epe_2.js') }}" ></script>

{% endblock %}