
{% if documentosFinancieros is defined %}
    {% for documentoFinanciero in documentosFinancieros %}
        <p class="col-md-4 margin-top-10"> 
            <span class="bold">Tipo: </span>
            {{ documentoFinanciero.tipoDocumentoFinanciero ~ (documentoFinanciero.numero is not null ? (' ' ~ documentoFinanciero.numero) : '') }}
            <a class="link-detalle" href="{{ path('documento_financiero_show', { 'id': documentoFinanciero.id }) }}" target="_blank">
                (ver detalle)
            </a>
        </p>
        <p class="col-md-3 margin-top-10"> 
            <span class="bold">Monto: </span>{{ documentoFinanciero.montoTotalDocumentoFinanciero|money_format }}
        </p>
        <p class="col-md-5 margin-top-10"> 
            <span class="bold">Fecha ingreso ADIF: </span>{{ documentoFinanciero.fechaIngresoADIF|date('d/m/Y') }}
        </p>
    {% endfor  %}
{% endif %}