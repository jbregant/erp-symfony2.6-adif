
{% if comprobantes is defined %}
    {% for comprobante in comprobantes %}
        <p class="col-md-4 margin-top-10"> 
            <span class="bold">Comprobante: </span>
            {{ comprobante.tipoComprobante ~ ' (' ~  comprobante.letraComprobante|default('-') ~ ')' }}
            <a class="link-detalle" href="{{ path( comprobante.path ~ '_show', { 'id': comprobante.id }) }}" target="_blank">(ver detalle)</a>
        </p>
        <p class="col-md-3 margin-top-10"> 
            <span class="bold">N&uacute;mero: </span>{{ comprobante.numeroCompleto }}
        </p>
        <p class="col-md-5 margin-top-10"> 
            <span class="bold">Fecha ingreso ADIF: </span>{{ comprobante.fechaIngresoADIF|date('d/m/Y') }}
        </p>
    {% endfor  %}
{% endif %}