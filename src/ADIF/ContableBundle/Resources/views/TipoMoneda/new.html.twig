{% extends '::base.html.twig' %}

{% set edit = form.vars.value.id != null %}

{% block body -%}
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">
                Tipo de moneda
            </div>
            <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>
            </div>
        </div>

        <div class="portlet-body form">
            {{ form_start(form, {'attr': {'class' : 'horizontal-form','novalidate': 'novalidate'} }) }}

            {% include ':Form:fieldsErrors.html.twig' %}

            {% if edit %} 
                <input type="hidden" name="_method" value="PUT" />
            {% endif %} 

            <div class="form-body">
                <div class="row">        
                    <div class="col-md-2">
                        <div class="form-group">
                            {{ form_label(form.codigoTipoMoneda) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.codigoTipoMoneda) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            {{ form_label(form.simboloTipoMoneda) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.simboloTipoMoneda) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            {{ form_label(form.denominacionTipoMoneda) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.denominacionTipoMoneda) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            {{ form_label(form.tipoCambio) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.tipoCambio) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            {{ form_label(form.esMCL) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.esMCL) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            {{ form_label(form.descripcionTipoMoneda) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.descripcionTipoMoneda) }}
                            </div>
                        </div>
                    </div>
                </div>

                <div class="form-actions">
                    <div class="pull-left">
                        <button type="button" class="btn default button-back" 
                                back-url="{{ path('tipomoneda') }}">Cancelar</button>
                    </div>
                    <div class="pull-right">
                        {{ form_widget(form.submit, {'attr': {'class': 'btn blue'}}) }}
                    </div>
                </div>

                {{ form_widget(form._token) }}

                {{ form_end(form, {"render_rest": false}) }}
            </div>
        </div>
    {% endblock %}

    {% block javascripts %}

        {{ parent() }}

        <script>
            $('form[name=adif_contablebundle_tipomoneda]').validate();
        </script>

    {% endblock %}