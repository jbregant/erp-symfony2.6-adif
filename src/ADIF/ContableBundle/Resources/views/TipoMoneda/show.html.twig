{% extends '::base.html.twig' %}

{% block body -%}
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">
                Detalles del tipo de moneda: <strong>{{ entity }}</strong>
            </div>
            <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>                
            </div>
        </div>
        <div class="portlet-body">
            <div class="row">          
                <div class="col-md-2">
                    <div class="form-group">
                        <label class="control-label">C&oacute;digo</label>
                        <div class="detalle_show">{{ entity.codigoTipoMoneda }}</div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label class="control-label">S&iacute;mbolo</label>
                        <div class="detalle_show">{{ entity.simboloTipoMoneda }}</div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label class="control-label">Denominaci&oacute;n</label>
                        <div class="detalle_show">{{ entity.denominacionTipoMoneda }}</div>
                    </div>
                </div>
                <div class="col-md-2">
                    <div class="form-group">
                        <label class="control-label">Tipo de cambio</label>
                        <div class="detalle_show">{{ entity.tipoCambio|money_format }}</div>
                    </div>
                </div>   
                <div class="col-md-2">
                    <div class="form-group">
                        <label class="control-label">Es moneda curso legal</label>
                        <div class="detalle_show">{{ entity.esMCL ? 'Si' : 'No' }}</div>
                    </div>
                </div>  
            </div>
            <div class="row"> 
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label">Descripci&oacute;n</label>
                        <div class="detalle_show">{{ entity.descripcionTipoMoneda|default('-') }}</div>
                    </div>
                </div>   
            </div>

            <div class="form-actions">
                <button type="button" class="btn default button-back" 
                        back-url="{{ path('tipomoneda') }}">
                    <i class="m-icon-swapleft"></i> Volver
                </button>
            </div>
        </div>
    </div>
{% endblock %}
