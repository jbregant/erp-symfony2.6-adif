{% extends '::base.html.twig' %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/custom/comprobante/new.js') }}" ></script>
{% endblock %}

{% set edit = form.vars.value.id != null %}

{% block body -%}
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">Comprobante</div>

            <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>
            </div>
        </div>
        <div class="portlet-body form">
            {{ form_start(form, {'attr': {'class' : 'horizontal-form','novalidate': 'novalidate'} }) }}

            {% include ':Form:fieldsErrors.html.twig' %}


            {% if edit %} 
                <input type="hidden" name="_method" value="PUT" />
            {% endif %} 


            <div class="form-body">
                <div class="row">                                    
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.fecha) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.fecha) }}
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.puntoVenta) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.puntoVenta) }}
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.numero) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.numero) }}
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.observaciones) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.observaciones) }}
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.total) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.total) }}
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.montoValidacion) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.montoValidacion) }}
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.letraComprobante) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.letraComprobante) }}
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.tipoComprobante) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.tipoComprobante) }}
                            </div>
                        </div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.tipoPago) }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.tipoPago) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>                

            <div class="form-actions">
                <div class="pull-left">
                    <button type="button" class="btn default button-back" 
                            back-url="{{ path('comprobantes') }}">Cancelar</button>
                </div>
                <div class="pull-right">
                    {{ form_widget(form.submit, {'attr': {'class': 'btn blue'}}) }}
                </div>
            </div>

            {{ form_widget(form._token) }}

            {{ form_end(form, {"render_rest": false}) }}
        </div>
    </div>
{% endblock %}
