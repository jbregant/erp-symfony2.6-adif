<div class="portlet box blue-madison">
    <div class="portlet-title">
        <div class="caption">
            Anticipos generados por cobranzas imputadas
        </div>
        <div class="tools">
            <a class="collapse" href="javascript:;"></a>
        </div>
    </div>
    <div class="portlet-body">
        <div class="table-toolbar clear">             
            <div class="btn-group pull-left" id="actualizar-a">
                <a class="btn btn-sm green tooltips" data-placement="right" data-original-title="Actualizar listado" href="">
                    <i class="fa fa-refresh"></i>
                    Actualizar listado
                </a>
            </div>      
        </div>
        <table class="table table-bordered table-striped table-condensed flip-content dt-multiselect export-excel" id="table-anticipos"
               dataexport-title="anticipos_cobranzas_imputadas" dataexport-title-alternativo="{{ 'Listado de Anticipos generados por cobranzas imputadas (impreso el ' ~ "now"|date("d/m/Y") ~ ' a las ' ~ "now"|date("H:i:s") ~ ' hs.)' }}">
            <thead>
                <tr class="replace-inputs filter">
                    <th></th>
                    <th class="not-in-filter"></th>
                    <th>Cliente</th>
                    <th>Fecha</th>
                    <th>Referencias</th>
                    <th>Saldo</th>
                    <th class="not-in-filter hidden">Id Cliente</th>
                    <th class="not-in-filter hidden">Id Anticipo</th>
                    <th class="not-in-filter hidden">Monto</th>
                </tr>
                <tr class="headers">
                    <th class="no-order entity_id"></th>
                    <th class="text-center table-checkbox no-order">
                        <input type="checkbox" class="group-checkable not-checkbox-transform" data-set="#table-anticipos .checkboxes" />
                    </th>
                    <th>Cliente</th>
                    <th date export-format="date" class="nowrap">Fecha</th>
                    <th>Referencias</th>                    
                    <th export-format="currency" currency >Saldo</th>                    
                    <th class="hidden">Id Cliente</th>
                    <th class="hidden">Id Anticipo</th>                    
                    <th class="hidden">Monto</th>                    
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>