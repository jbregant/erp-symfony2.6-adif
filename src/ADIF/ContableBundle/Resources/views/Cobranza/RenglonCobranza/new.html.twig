{% extends '::base.html.twig' %}


{% block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/custom/cobranza\rengloncobranza/new.js') }}" ></script>
{% endblock %}

{% set edit = form.vars.value.id != null %}

