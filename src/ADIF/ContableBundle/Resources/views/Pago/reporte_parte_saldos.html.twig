{% extends '::base.html.twig' %}  

{% block body -%}

    <div class="row">
        <div class="col-md-12">
            <div class="portlet box blue">
                <div class="portlet-title">
                    <div class="caption">Parte diario de tesorer&iacute;a</div>
                </div>

                <div class="portlet-body">

                    <div class="table-toolbar" style="margin-top: 3em">

                        <div class="btn-group pull-left" style="margin-top: -3em">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <div class="input-group">
                                        <label for="adif_contablebundle_filtro_fechaReporte" 
                                               class="control-label">Fecha reporte</label>
                                        <div class="input-icon right">
                                            <i class="fa"></i>
                                            <input type="text" id="adif_contablebundle_filtro_fechaReporte" 
                                                   name="adif_contablebundle_filtro[fechaReporte]" 
                                                   class="form-control datepicker">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <div class="input-group">
                                        <label for="adif_contablebundle_filtro_fechaExtracto" 
                                               class="control-label">Fecha extracto</label>
                                        <div class="input-icon right">
                                            <i class="fa"></i>
                                            <input type="text" id="adif_contablebundle_filtro_fechaExtracto" 
                                                   name="adif_contablebundle_filtro[fechaExtracto]" 
                                                   class="form-control datepicker">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-3">
                                <div class="form-group">
                                    <div class="input-group">
                                        <label for="adif_contablebundle_filtro_fechaPago" 
                                               class="control-label">Pagos emitidos al</label>
                                        <div class="input-icon right">
                                            <i class="fa"></i>
                                            <input type="text" id="adif_contablebundle_filtro_fechaPago" 
                                                   name="adif_contablebundle_filtro[fechaPago]" 
                                                   class="form-control datepicker">
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="col-md-2">
                                <div class="form-group">
                                    <label class="control-label">&nbsp;</label>
                                    <button class="btn btn-small blue-hoki form-control" id="filtrar">
                                        Filtrar
                                    </button>
                                </div>
                            </div>                        
                        </div>
                    </div>

                    <table class="table table-striped table-hover table-bordered 
                           table-condensed export-excel dt-multiselect" data-toggler="1"
                           id="reporte_table" dataexport-title="Parte_diario_tesoreria" >
                        <thead>
                            <tr class="replace-inputs filter">
                                <th></th>
                                <th class="not-in-filter"></th>
                                <th class="text-center nowrap">Banco</th>
                                <th class="text-center nowrap">N&ordm; de cuenta</th>
                                <th class="text-center nowrap">Saldo bancario</th>
                                <th data-type="date" class="text-center nowrap">Fecha extracto</th>
                                <th class="text-center nowrap">Pagos a generar</th>
                                <th class="text-center nowrap">Pagos a la firma</th>
                                <th class="text-center nowrap">Pagos en cartera</th>
                                <th class="text-center nowrap">Pagos retirados</th>
                                <th class="text-center nowrap">Cheques pendientes de registraci&oacute;n</th>
                                <th class="text-center nowrap">Ingresos pendientes</th>
                                <th class="text-center nowrap">Saldo financiero</th>
                            </tr>
                            <tr class="headers">
                                <th class="no-order entity_id"></th>
                                <th class="text-center table-checkbox no-order">
                                    <input type="checkbox" class="not-checkbox-transform group-checkable" data-set="#table-cobranzas .checkboxes" />
                                </th>
                                <th class="text-center nowrap">Banco</th>
                                <th class="text-center nowrap">N&ordm; de cuenta</th>
                                <th currency class="text-center nowrap">Saldo bancario</th>
                                <th date class="text-center nowrap">Fecha extracto</th>
                                <th currency class="text-center nowrap">Pagos a generar</th>
                                <th currency class="text-center nowrap">Pagos a la firma</th>
                                <th currency class="text-center nowrap">Pagos en cartera</th>
                                <th currency class="text-center nowrap">Pagos retirados</th>
                                <th currency class="text-center nowrap">Cheques pendientes de registraci&oacute;n</th>
                                <th currency class="text-center nowrap">Ingresos pendientes</th>
                                <th currency class="text-center nowrap">Saldo financiero</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 

{% block javascripts %}

    {{ parent() }}

    <script src="{{ asset(theme_path ~ 'plugins/jquery-autonumeric/autoNumeric.js') }}" ></script>

    <script src="{{ asset('js/custom/contable/pagos/reporte_parte_saldos.js') }}" ></script>

{% endblock %}