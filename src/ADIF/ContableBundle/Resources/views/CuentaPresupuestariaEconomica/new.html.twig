{% extends '::base.html.twig' %}

{% block stylesheets %}

    {{ parent() }}

    <link href="{{ asset(theme_path ~ 'plugins/jstree/dist/themes/default/style.css') }}" rel="stylesheet" type="text/css" />

{% endblock %}

{% set edit = form.vars.value.id != null %}

{% block body -%}
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">Cuenta presupuestaria econ&oacute;mica</div>
            <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>
            </div>
        </div>
        <div class="portlet-body form">
            {{ form_start(form, {'attr': {'class' : 'horizontal-form','novalidate': 'novalidate'} }) }}

            {% include ':Form:fieldsErrors.html.twig' %}

            {% if edit %} 
                <input type="hidden" name="_method" value="PUT" />
            {% endif %} 

            <div class="form-body">

                <div class="row">
                    <div class="col-md-5"> 
                        <div class="form-group">
                            {{ form_label(form.cuentaPresupuestariaEconomicaPadre)  }}
                            <a href=#" data-original-title="Buscar cuenta presupuestaria econÃ³mica"
                               class="pull-right label label-sm label-success tooltips btn-search-cuenta-presupuestaria-economica">
                                <i class="fa fa-search"></i>
                            </a>
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.cuentaPresupuestariaEconomicaPadre) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            {{ form_label(form.categoriaCuentaPresupuestariaEconomica)  }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.categoriaCuentaPresupuestariaEconomica) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            {{ form_label(form.suma)  }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.suma) }}
                            </div>
                        </div>
                    </div>
                </div> 

                <div class="row cleardiv">
                    <div class="col-md-4">
                        <div class="form-group">
                            {{ form_label(form.codigo)  }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.codigo) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.denominacion)  }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.denominacion) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            {{ form_label(form.esImputable)  }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.esImputable) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            {{ form_label(form.descripcion)  }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.descripcion) }}
                            </div>
                        </div>
                    </div>
                </div>
            </div>                

            <div class="form-actions">
                <div class="pull-left">
                    <button type="button" class="btn default button-back" 
                            back-url="{{ path('cuentapresupuestariaeconomica') }}">Cancelar</button>
                </div>
                <div class="pull-right">
                    {{ form_widget(form.submit, {'attr': {'class': 'btn blue'}}) }}
                </div>
            </div>

            {{ form_widget(form._token) }}

            {{ form_end(form, {"render_rest": false}) }}
        </div>
    </div>

    {% include 'ADIFContableBundle:CuentaPresupuestariaEconomica:searchForm.html.twig' %}

{% endblock %}

{% block javascripts %}
    {{ parent() }}

    <script src="{{ asset(theme_path ~ 'plugins/jstree/dist/jstree.min.js') }}" ></script>

    <script type="text/javascript">

        var pathCodigoInicial = "{{ path('cuentapresupuestariaeconomica_codigoinicial') }}";

    </script>

    <script src="{{ asset(js_path ~ 'custom/contable/cuentapresupuestariaeconomica/new.js') }}" ></script>

    <script src="{{ asset(js_path ~ 'custom/contable/cuentapresupuestariaeconomica/search.js') }}" ></script> 
{% endblock %}