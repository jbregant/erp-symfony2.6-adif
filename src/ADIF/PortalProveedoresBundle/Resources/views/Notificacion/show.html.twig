{% extends '::base.html.twig' %}


{% block body -%}
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">
                Detalles de la notificaci&oacute;n: 
                {# <strong>{{ entity }}</strong> #}
            </div>
            <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>                
            </div>
        </div>
        <div class="portlet-body">
            <div class="row">    
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Titulo</label>
                        <div class="detalle_show">                                {{ entity.titulo }}                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Autor</label>
                        <div class="detalle_show">                                {{ entity.autor }}                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Fecha Desde</label>
                        <div class="detalle_show">                                {{ entity.fechaDesde|date('d/m/Y H:i:s') }}                        </div>
                    </div>
                </div>              
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Fecha Hasta</label>
                        <div class="detalle_show">                                {{ entity.fechaHasta|date('d/m/Y H:i:s') }}                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        <label class="control-label">Mensaje</label>
                        <div class="detalle_show" style="height: 100px;">                                {{ entity.mensaje }}                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Estado</label>
                        <div class="detalle_show">                                {{ entity.estadoId }}                        </div>
                    </div>
                </div>
            </div>
            
            <div class="form-actions">
                <button type="button" class="btn default button-back" 
                        back-url="{{ path('notificacion') }}">
                    <i class="m-icon-swapleft"></i> Volver
                </button>
            </div>
        </div>
    </div>
{% endblock %}
