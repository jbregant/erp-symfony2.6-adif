{% extends '::base.html.twig' %}

{% block body -%}
<div class="portlet box blue">
    <div class="portlet-title">
        <div class="caption">
            Detalles del Logger
        </div>
        <div class="tools">
            <a href="javascript:;" class="collapse">
            </a>                
        </div>
    </div>
    <div class="portlet-body">
        <div class="row">            
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Fecha</label>
                    <div class="detalle_show">
                        {{ entity.fecha|date('d/m/Y H:i:s') }} 
                    </div>
                </div>
            </div> 
            <div class="col-md-2">
                <div class="form-group">
                    <label class="control-label">Id Entidad</label>
                    <div class="detalle_show">
                        {{ entity.idEntidad }}
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label class="control-label">Clase Entidad</label>
                    <div class="detalle_show">
                        {{ entity.claseEntidad }}
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Acci&oacute;n</label>
                    <div class="detalle_show">
                        {{ entity.accion }}
                    </div>
                </div>
            </div> 
            <div class="col-md-8">
                <div class="form-group">
                    <label class="control-label">Observaci&oacute;n</label>
                    <div class="detalle_show">
                        {{ entity.observacion|default('-') }}
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <div class="form-group">
                    <label class="control-label">Query</label>
                    <div class="detalle_show">
                        {{ entity.query }}
                    </div>
                </div>
            </div>
        </div>

        <button type="button" class="btn default button-back" 
                back-url="{{ path('auditoria') }}">
            <i class="m-icon-swapleft"></i> Volver
        </button>
    </div>
</div>
{% endblock %}
