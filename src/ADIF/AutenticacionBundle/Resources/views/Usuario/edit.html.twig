{% extends '::base.html.twig' %}

{% set edit = form.vars.value.id != null %}

{% block body -%}
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">
                Editar usuario
            </div>
            <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>
            </div>
        </div>
        <div class="portlet-body form">
            {{ form_start(form, {'attr': {'class' : 'horizontal-form','novalidate': 'novalidate'} }) }}

            {% include ':Form:fieldsErrors.html.twig' %}


            {% if edit %} 
                <input type="hidden" name="_method" value="PUT" />
				<input type="hidden" id="idUsuario" value="{{ form.vars.value.id }}" />
            {% endif %} 


            <div class="form-body">
                <div class="row">                        
                    <div class="col-md-4">
                        <div class="form-group">
                            {{ form_label(form.nombre, null, {'label_attr': {'class': 'control-label'}})  }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.nombre) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            {{ form_label(form.apellido, null, {'label_attr': {'class': 'control-label'}})  }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.apellido) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            {{ form_label(form.email, null, {'label_attr': {'class': 'control-label'}})  }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.email) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">          
                    <div class="col-md-5">
                        <div class="form-group">
                            {{ form_label(form.username, null, {'label_attr': {'class': 'control-label'}})  }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.username) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            {{ form_label(form.area, null, {'label_attr': {'class': 'control-label'}})  }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.area) }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            {{ form_label(form.enabled, null, {'label_attr': {'class': 'control-label'}})  }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.enabled, {'attr': {'class': 'form-control' } }) }}
                            </div>
                        </div>
                    </div>
                </div>
				
				<div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.empresas, null, {'label_attr': {'class': 'control-label'}})  }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.empresas) }}
                            </div>
                        </div>
                    </div>
                            
                    <div class="col-md-6">
                        <div class="form-group">
                            {{ form_label(form.usuarioComo, null, {'label_attr': {'class': 'control-label'}})  }}
                            <div class="input-icon right">
                                <i class="fa"></i>
                                {{ form_widget(form.usuarioComo) }}
                            </div>
                        </div>
                    </div>
                </div>
				
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            {{ form_label(form.groups, null, {'label_attr': {'class': 'control-label'}})  }}
							<div id="div_grupos_append">
								<div class="input-icon right">
									<i class="fa"></i>
									{{ form_widget(form.groups) }}
								</div>
							</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="form-actions right">
                <button type="button" class="btn default button-back" back-url="{{ path('usuarios_index') }}">Cancelar</button>
                {{ form_widget(form.submit, {'attr': {'class': 'btn blue'}}) }}
            </div>
            {{ form_widget(form._token) }}
            {{ form_end(form, {"render_rest": false}) }}
        </div>
    </div>
{% endblock %}

{% block javascripts %}

    {{ parent() }}

    <script src="{{ asset(js_path ~ 'custom/autenticacion/usuarios/edit.js') }}" ></script>

{% endblock %}