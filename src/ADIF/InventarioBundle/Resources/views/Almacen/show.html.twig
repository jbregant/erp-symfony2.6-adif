{% extends '::base.html.twig' %}


{% block body -%}
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">
                Detalles del almacén: <strong>{{ entity.denominacion }}</strong>
            </div>
            <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>
            </div>
        </div>
        <div class="portlet-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Tipo</label>
                        <div class="detalle_show">                                {{ entity.tipo == 'A'?'Almacén':'Obrador' }}                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Denominación</label>
                        <div class="detalle_show">                                {{ entity.denominacion }}                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Número Deposito</label>
                        <div class="detalle_show">                                {{ entity.numeroDeposito }}                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Provincia</label>
                        <div class="detalle_show">                                {{ entity.provincia }}                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Latitud</label>
                        <div class="detalle_show">                                {{ entity.latitud }}                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Longitud</label>
                        <div class="detalle_show">                                {{ entity.longitud }}                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Línea</label>
                        <div class="detalle_show">                                {{ entity.linea.denominacion|default('-') }}                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Estación</label>
                        <div class="detalle_show">                                {{ entity.estacion.denominacion|default('-') }}                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Zona Vía</label>
                        <div class="detalle_show">                                {{ entity.zonaVia }}                        </div>
                    </div>
                </div>
            </div>

            <div class="form-actions">
                <button type="button" class="btn default button-back"
                        back-url="{{ path('almacen') }}">
                    <i class="m-icon-swapleft"></i> Volver
                </button>
            </div>
        </div>
    </div>
{% endblock %}
