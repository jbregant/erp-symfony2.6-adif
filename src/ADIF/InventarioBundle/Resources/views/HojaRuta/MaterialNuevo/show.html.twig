    <script src="{{ asset('js/custom/inventario/hojaruta/materialnuevo/new.js') }}" ></script>
    <script src="{{ asset('js/custom/inventario/hojaruta/hojaRuta_fn.js') }}" ></script>
{% endblock %}

{% block body -%}
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">
                Detalles de la Hoja De Ruta: <strong>{{ entity.denominacion }}</strong>
            </div>
            <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>
            </div>
        </div>
        <div class="portlet-body">
            <fieldset class="form-section-fieldset">
                <div class="row">
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="control-label">Denominaci√≥n</label>
                            <div class="detalle_show">{{ entity.denominacion }}</div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="control-label">Usuario</label>
                            <div class="detalle_show">{{ entity.usuarioAsignado }}</div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="control-label">Fecha de Vencimiento</label>
                            <div class="detalle_show">{{ entity.fechaVencimiento|date('d/m/Y') }}</div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label class="control-label">Estado</label>
                            <div class="detalle_show">{{ entity.estadoHojaRuta }}</div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label">Tipo de Relevamiento</label>
                            <div class="detalle_show">
                                {{ entity.tipoRelevamiento }}
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label class="control-label">Fecha de Alta</label>
                            <div class="detalle_show">
                                {{ entity.fechaCreacion|date('d/m/Y') }}
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>

            <div class="portlet box blue" >
                <div class="portlet-title">
                    <div class="caption">Items Material Nuevo</div>

                    <div class="tools">
                        <a href="javascript:;" class="collapse">
                        </a>
                    </div>
                </div>
                <div class="portlet-body">
                    <fieldset class="form-section-fieldset" >
                        <table
                            class="table table-bordered table-striped table-condensed flip-content dt-multiselect export-excel"
                            id="table-item"
                            dataexport-title="hojaruta-item-activolineal">
                            <thead>
                                <tr class="replace-inputs filter">
                                    <th></th>
                                    <th class="not-in-filter"></th>
                                    <th>Provincia</th>
                                    <th>L&iacute;nea</th>
                                    <th>Almacen</th>
                                    <th>Tipo de Material</th>
                                    <th>Grupo de Material</th>
                                    <th>Estado de Conservaci&oacute;n</th>
                                    <th class="not-in-filter"></th>
                                </tr>
                                <tr class="headers">
                                    <th class="no-order entity_id"></th>
                                    <th class="text-center table-checkbox no-order">
                                        <input type="checkbox" class="group-checkable" data-set="#table-item .checkboxes" />
                                    </th>
                                    <th>Provincia</th>
                                    <th>L&iacute;nea</th>
                                    <th>Almacen</th>
                                    <th>Tipo de Material</th>
                                    <th>Grupo de Material</th>
                                    <th>Estado de Conservaci&oacute;n</th>
                                    <th class="text-center no-order ctn_acciones">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </fieldset>
                </div>
            </div>

            <div class="form-actions">
                <button type="button" class="btn default button-back" 
                        back-url="{{ path('hojaruta', { "indice": indice }) }}">
                    <i class="m-icon-swapleft"></i> Volver
                </button>
            </div>

        </div>
    </div>
{% endblock %}
