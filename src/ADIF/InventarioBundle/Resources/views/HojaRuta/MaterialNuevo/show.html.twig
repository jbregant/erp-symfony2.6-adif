{% extends '::base.html.twig' %}

{% block javascripts %}
    {{ parent() }}
    <script>
        var hojaRuta = '{{ idHojaRuta|default('') }}';
        var indiceTipo = '{{ indice | default('2') }}';
        var errores = '0';
        var isShow = true;
