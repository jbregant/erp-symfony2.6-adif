{% extends '::base.html.twig' %}


{% block body -%}
    <div class="portlet box blue">
        <div class="portlet-title">
            <div class="caption">
                Detalles del corredor: <strong>{{ entity.denominacion }}</strong>
            </div>
            <div class="tools">
                <a href="javascript:;" class="collapse">
                </a>
            </div>
        </div>
        <div class="portlet-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Denominación</label>
                        <div class="detalle_show">                                {{ entity.denominacion }}                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Línea</label>
                        <div class="detalle_show">                                {{ entity.linea.denominacion }}                        </div>
                    </div>
                </div>
            </div>
            <div class="row">

                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">Operador</label>
                        <div class="detalle_show">                             {{ entity.operador.denominacion  }}                        </div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="control-label">División</label>
                        <div class="detalle_show">                                {{ entity.division.denominacion|default('-') }}                        </div>
                    </div>
                </div>

            </div>

            <div class="form-actions">
                <button type="button" class="btn default button-back"
                        back-url="{{ path('corredor') }}">
                    <i class="m-icon-swapleft"></i> Volver
                </button>
            </div>
        </div>
    </div>
{% endblock %}
