    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                {{ form_label(form.estacion) }}
                <div class="input-icon right">
                    <i class="fa"></i>
                    {{ form_widget(form.estacion, { 'id': 'cod_estacion' }) }}
                </div>
