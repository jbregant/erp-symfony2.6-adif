                    {{ form_widget(form.tipoActivo) }}
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                {{ form_label(form.tipoServicio) }}
                <div class="input-icon right">
                    <i class="fa"></i>
                    {{ form_widget(form.tipoServicio) }}
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                {{ form_label(form.zonaVia) }}
                <div class="input-icon right">
                    <i class="fa"></i>
                    {{ form_widget(form.zonaVia) }}
