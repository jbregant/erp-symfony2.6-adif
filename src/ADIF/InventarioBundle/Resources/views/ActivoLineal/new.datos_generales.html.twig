            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                {{ form_label(form.longitud) }}
                <div class="input-icon right">
                    <i class="fa"></i>
                    {{ form_widget(form.longitud) }}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="form-group">
                {{ form_label(form.observaciones) }}
                <div class="input-icon right">
                    <i class="fa"></i>
                    {{ form_widget(form.observaciones) }}
                </div>
            </div>
        </div>
    </div>
</fieldset>
