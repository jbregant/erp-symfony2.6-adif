<fieldset class="form-section-fieldset">

    <legend class="form-section-legend">General</legend>

    <div class="row">
        <div class="col-md-2">
            <div class="form-group">
                {{ form_label(form.estaSujetoImpuestos) }}
                <div class="input-icon right">
                    <i class="fa"></i>
                    {{ form_widget(form.estaSujetoImpuestos) }}
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                {{ form_label(form.participaInventario) }}
                <div class="input-icon right">
                    <i class="fa"></i>
                    {{ form_widget(form.participaInventario) }}
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                {{ form_label(form.esActivoFijo) }}
                <div class="input-icon right">
                    <i class="fa"></i>
                    {{ form_widget(form.esActivoFijo) }}
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                {{ form_label(form.categoria) }}
                <div class="input-icon right">
                    <i class="fa"></i>
                    {{ form_widget(form.categoria) }}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4">
